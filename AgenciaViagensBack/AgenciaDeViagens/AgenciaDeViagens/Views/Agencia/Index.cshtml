@model IEnumerable<AgenciaDeViagens.Models.Agencia>

@{
    ViewData["Title"] = "Promoções";
}

<link rel="stylesheet" href="~/css/StyleSheet.css">
<div class="container my-4">
    <div class="row">
        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/al.jpg" alt="Card image" style="width:100%">
                <div class="card-body bg-primary text-white">
                    <h4 class="card-title">Holanda</h4>
                    <p>Promoção imperdível! 3 dias na Holanda, com hotel incluso.</p>
                    <p class="promocao"><strong>De R$ 5,900</strong></p>
                    <p><strong>$: 2,950</strong></p>
                    <a onclick="alert('Item adicionado ao Carrinho')" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/costam.jpg" alt="Card image" style="width:100%">
                <div class="card-body bg-primary text-white">
                    <h4 class="card-title">Costa do Marfim</h4>
                    <p class="card-text">
                    <p>Promoção de férias! 7 dias na Costa do Marfim, com hotel e transporte incluso.</p>
                    <p class="promocao"> R$ 12,100</p>
                    <p> R$: 6,670</p>
                    <a onclick="alert('Item adicionado ao Carrinho')" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/eua.jpeg" alt="Card image" style="width:100%">
                <div class="card-body bg-primary text-white">
                    <h4 class="card-title">Eua</h4>
                    <p>Promoção dos sonhos, 15 dias na terra dos sonhos com tudo incluso.</p>
                    <p class="promocao"> R$ 11,000</p>
                    <p> R$: 5,900</p>
                    <a onclick="alert('Item adicionado ao Carrinho')" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/arg.jpg" alt="Card image" style="width:100%">
                <div class="card-body bg-primary text-white">
                    <h4 class="card-title">Argentina</h4>
                    <p>Promoção alfajor, 6 dias na terra dos hermanos.</p>
                    <p class="promocao"> R$ 3,700</p>
                    <p> R$: 1,900</p>
                    <a onclick="alert('Item adicionado ao Carrinho')" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/rss.jpg" alt="Card image" style="width:100%">
                <div class="card-body bg-primary text-white">
                    <h4 class="card-title">Rússia</h4>
                    <p>Promoção inverno, 3 dias na terra dos ursos.</p>
                    <p class="promocao"> R$ 10,000</p>
                    <p> R$: 5,000</p>
                    <a onclick="alert('Item adicionado ao Carrinho')" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/chile.jpg" alt="Card image" style="width:100%">
                <div class="card-body bg-primary text-white">
                    <h4 class="card-title">Chile</h4>
                    <p>Promoção dos andis, 2 dias na terra vivendo um sonho.</p>
                    <p class="promocao"> R$ 2,700</p>
                    <p> R$: 1,100</p>
                    <a onclick="alert('Item adicionado ao Carrinho')" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
    </div>

    <p>
        <a asp-action="Create">Adicionar uma nova promoção </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Passaporte)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecoPromo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destino)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Passaporte)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecoPromo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destino.Pais)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>